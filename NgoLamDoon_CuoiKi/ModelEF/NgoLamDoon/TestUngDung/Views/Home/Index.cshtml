@model IEnumerable<ModelEF.Model.Product>
@using PagedList.Mvc
@using PagedList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Thời Trang Hiện Đại</h2>
        @if (Model.Count() == 0)
        {
            <label class="badge badge-warning">Không tìm thấy sản phẩm</label>
        }
        else
        {
            foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="~/Upload/Images/@item.Image" alt="image" style="width:100%; height:320px" />
                                <h2>@String.Format("{0:0,0 VND}", item.UnitCost) </h2>
                                <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                            </div>
                            <div class="product-overlay">
                                <div class="overlay-content">
                                    <h2>@String.Format("{0:0,0 VND}", item.UnitCost) </h2>
                                    <p>@Html.DisplayFor(modelItem => item.Name)</p>
                                    <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    </div><!--features_items-->
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
</div>
